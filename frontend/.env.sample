# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=10000

# Application Configuration
REACT_APP_NAME=Feedback System
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Internal Feedback Management System

# Environment
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=false
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_PWA=false

# UI Configuration
REACT_APP_ITEMS_PER_PAGE=10
REACT_APP_MAX_FEEDBACK_LENGTH=5000
REACT_APP_NOTIFICATION_DURATION=5000

# Development Configuration
GENERATE_SOURCEMAP=false
REACT_APP_DEBUG_MODE=false

# Analytics (for production)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_MIXPANEL_TOKEN=

# Social/External Links
REACT_APP_COMPANY_NAME=Your Company
REACT_APP_SUPPORT_EMAIL=support@yourcompany.com
REACT_APP_PRIVACY_POLICY_URL=
REACT_APP_TERMS_OF_SERVICE_URL=

# PWA Configuration (for future use)
REACT_APP_PWA_NAME=Feedback System
REACT_APP_PWA_SHORT_NAME=Feedback
REACT_APP_PWA_THEME_COLOR=#4F46E5
REACT_APP_PWA_BACKGROUND_COLOR=#FFFFFF

# Performance Configuration
REACT_APP_LAZY_LOADING=true
REACT_APP_IMAGE_OPTIMIZATION=true
REACT_APP_CACHE_DURATION=300000

# Security Configuration
REACT_APP_CSP_ENABLED=true
REACT_APP_HTTPS_ONLY=false

# Localization (for future use)
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,es,fr

# Development Tools
REACT_APP_REDUX_DEVTOOLS=true
REACT_APP_LOGGER_ENABLED=false